{
  "compilerOptions": {
    "target": "ES2021",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "Node16",
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "E:/IQNet/IQNet/server",
    /* Bundler mode */
    "moduleResolution": "Node16",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["morgan", "express", "cookie-parser", "cors", "body-parser"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
